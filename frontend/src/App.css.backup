* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  line-height: 1.6;
  color: #333;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.App {
  min-height: 100vh;
}

.header {
  text-align: center;
  color: white;
  padding: 60px 20px 40px;
}

.header h1 {
  font-size: 3.5em;
  margin-bottom: 20px;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
}

.header p {
  font-size: 1.3em;
  opacity: 0.9;
}

.main-content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
}

.courses-section h2,
.roadmap-section h2,
.stats-section h2 {
  text-align: center;
  color: white;
  margin-bottom: 40px;
  font-size: 2.5em;
}

.courses-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 30px;
  margin-bottom: 60px;
}

.course-card {
  background: white;
  border-radius: 15px;
  padding: 30px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  transition: all 0.3s ease;
  text-align: center;
}

.course-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 40px rgba(0,0,0,0.15);
}

.course-icon {
  font-size: 4em;
  margin-bottom: 20px;
}

.course-card h3 {
  color: #2c3e50;
  font-size: 1.8em;
  margin-bottom: 15px;
}

.course-card p {
  color: #666;
  margin-bottom: 25px;
  font-size: 1.1em;
}

.course-progress {
  margin-bottom: 20px;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
  font-size: 0.9em;
  color: #666;
}

.slides-count {
  color: #999;
}

.progress-bar-container {
  width: 100%;
  height: 8px;
  background: #e9ecef;
  border-radius: 4px;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  border-radius: 4px;
  transition: width 0.3s ease;
}

.course-button {
  color: white;
  border: none;
  padding: 12px 30px;
  border-radius: 25px;
  font-weight: bold;
  cursor: pointer;
  transition: transform 0.3s;
}

.course-button:hover {
  transform: scale(1.05);
}

.roadmap {
  background: white;
  border-radius: 15px;
  padding: 40px;
  margin-bottom: 60px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.roadmap-step {
  display: flex;
  align-items: center;
  padding: 20px 0;
  border-bottom: 1px solid #eee;
  opacity: 0.7;
  transition: all 0.3s ease;
  cursor: pointer;
}

.roadmap-step.completed {
  opacity: 1;
}

.roadmap-step:hover {
  background-color: #f8f9fa;
  transform: translateX(10px);
}

.roadmap-step:last-child {
  border-bottom: none;
}

.step-number {
  width: 40px;
  height: 40px;
  background: #667eea;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin-right: 20px;
  transition: all 0.3s ease;
}

.roadmap-step.completed .step-number {
  background: #28a745;
}

.step-content {
  flex: 1;
}

.step-content h4 {
  color: #2c3e50;
  margin-bottom: 5px;
}

.step-content p {
  color: #666;
  font-size: 0.9em;
}

.completed-badge {
  color: #28a745;
  font-weight: bold;
  font-size: 0.8em;
  margin-left: 10px;
}

.upcoming-badge {
  color: #ffc107;
  font-weight: bold;
  font-size: 0.8em;
  margin-left: 10px;
}

.step-progress {
  background: #e9ecef;
  color: #495057;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 0.8em;
  font-weight: bold;
  margin-left: 15px;
}

.stats-section {
  margin-bottom: 40px;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
}

.stat-card {
  background: white;
  border-radius: 15px;
  padding: 25px;
  display: flex;
  align-items: center;
  box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.stat-card:hover {
  transform: translateY(-5px);
}

.stat-icon {
  font-size: 3em;
  margin-right: 20px;
}

.stat-info h3 {
  color: #2c3e50;
  font-size: 2.5em;
  margin-bottom: 5px;
}

.stat-info p {
  color: #666;
  font-size: 1.1em;
}

.footer {
  text-align: center;
  color: white;
  padding: 40px 20px;
  opacity: 0.8;
}

/* Responsive */
@media (max-width: 768px) {
  .courses-grid {
    grid-template-columns: 1fr;
  }

  .header h1 {
    font-size: 2.5em;
  }

  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .stat-card {
    flex-direction: column;
    text-align: center;
  }

  .stat-icon {
    margin-right: 0;
    margin-bottom: 15px;
  }
}
